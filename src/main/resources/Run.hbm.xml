<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
  
<hibernate-mapping package="cz.jalasoft.runner.domain.model.run">
    <class name="Run" table="run">
        <id name="persistenceId" column="id">
            <generator class="native"/>
        </id>
        <component name="id" class="RunId">
            <property name="id" column="run_id" access="field"/>
        </component>
        <property name="nickname" column="nickname"/>
        <property name="date" column="date"/>
        <component name="distance" class="Distance">
            <property name="value" column="distance_meters"/>
        </component>
        <property name="duration" column="duration" type="cz.jalasoft.runner.infrastructure.persistence.type.DurationType"/>
    </class>
</hibernate-mapping>
        