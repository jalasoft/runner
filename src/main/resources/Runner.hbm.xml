<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="cz.jalasoft.runner.domain.model.runner">
    <class name="Runner" table="runner">
        <id name="persistenceId" column="id">
            <generator class="native"/>
        </id>
        <component name="id" class="RunnerId">
            <property name="id" column="domain_id" access="field"/>
        </component>
        <property name="nickname" column="nickname"/>
        <property name="birthday" column="birthday" access="field"/>
        <component name="name" class="Name" access="field">
            <property name="firstName" column="first_name"/>
            <property name="lastName" column="last_name"/>
        </component>
    </class>
</hibernate-mapping>